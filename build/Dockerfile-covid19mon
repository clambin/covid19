FROM golang:1.15 AS builder

WORKDIR /build

COPY . ./

ARG BUILD_VERSION=develop
RUN CGO_ENABLED=0 go -ldflags "-X covid19/internal/version.BuildVersion=$BUILD_VERSION" build cmd/covid19mon/covid19mon.go

FROM alpine

WORKDIR /app

COPY --from=builder /build/covid19mon /app

EXPOSE 5000
ENTRYPOINT ["/app/covid19mon"]
CMD []


